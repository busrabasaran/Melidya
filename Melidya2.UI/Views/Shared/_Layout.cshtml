@using Melidya2.Entity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>

</head>
<body>

    @{
        Customers customer = null;
        if (Session["Login"] != null)
        {
            customer = Session["Login"] as Customers;
        }
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#"> Melidya</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Order/Index"><i class="fas fa-home"></i>Anasayfa <span class="sr-only">(current)</span></a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                @if (Session["Login"] != null)
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="/Product/Products">Ürünler <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link " href="/Profil/UserProfile"><i class="glyphicon glyphicon-user">@customer.ContactName </i><span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Product/Sepet">
                            <i class='fas fa-cart-arrow-down'>Sepetim</i>
                            
                            @if (Session["Sepet"] != null)
                            {
                                @Session["Count"]
                            }
                            
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Logout">Çıkış <span class="sr-only">(current)</span></a>
                    </li>


                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Login">Giriş <span class="sr-only">(current)</span></a>
                    </li>

                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>